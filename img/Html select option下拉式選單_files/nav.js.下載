var ww=document.body.clientWidth;$(document).ready(function(){$(".list_drop li a").each(function(){if($(this).next().length>0){$(this).addClass("parent");};})
$(".toggleMenu").click(function(e){e.preventDefault();$(this).toggleClass("active");$(".list_drop").toggle();});adjustMenu();})
$(window).bind('resize orientationchange',function(){ww=document.body.clientWidth;adjustMenu();});var adjustMenu=function(){if(ww<768){$(".toggleMenu").css("display","inline-block");if(!$(".toggleMenu").hasClass("active")){$(".list_drop").hide();}else{$(".list_drop").show();}
$(".list_drop li").unbind('mouseenter mouseleave');$(".list_drop li a.parent").unbind('click').bind('click',function(e){e.preventDefault();$(this).parent("li").toggleClass("hover");});}
else if(ww>=768){$(".toggleMenu").css("display","none");$(".list_drop").show();$(".list_drop li").removeClass("hover");$(".list_drop li a").unbind('click');$(".list_drop li").unbind('mouseenter mouseleave').bind('mouseenter mouseleave',function(){$(this).toggleClass('hover');});}}